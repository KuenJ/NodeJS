<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/main.css" />
    <!-- Bootstrap 5.3 CSS Ï∂îÍ∞Ä -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs') %>
    <div class="white-bg">
      <% for(let i =0 ; i < title.length ;i++){ %>
      <div class="list-box">
        <h4>
          <a href="/detail/<%= title[i]._id %>"> <%= title[i].title %> </a>
          <a href="/edit/<%= title[i]._id %>">‚úèÔ∏è</a>
          <span class="delete" data-id="<%= title[i]._id %>">üóëÔ∏è</span>
        </h4>
        <p><%= title[i].content %></p>
      </div>
      <% } %>

      <!-- Bootstrap 5.3 ÌéòÏù¥ÏßÄÎÑ§Ïù¥ÏÖò Ï†ÅÏö© -->
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="/list/<%= currentPage - 1 %>"
              >Previous</a
            >
          </li>
          <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="/list/<%= i %>"><%= i %></a>
          </li>
          <% } %> <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="/list/<%= currentPage + 1 %>">Next</a>
          </li> 
          <% } %>
        </ul>
      </nav>
    </div>

    <!-- Bootstrap 5.3 JS Ï∂îÍ∞Ä -->

    <script>
      for (let i = 0; i < "<%= title.length %>"; i++) {
        document
          .querySelectorAll(".delete")
          [i].addEventListener("click", function (e) {
            fetch("/delete?docid=" + e.target.dataset.id, {
              method: "DELETE",
            })
              .then((r) => r.text())
              .then((r) => {
                console.log(r);
              });
          });
      }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
